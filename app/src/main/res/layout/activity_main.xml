<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:iss_auto_cycle="true"
        app:iss_period="1000"
        app:iss_delay="1000"
        app:iss_text_align="CENTER"/>

    <EditText
        android:id="@+id/etPeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_slider"
        android:layout_marginTop="16dp"
        android:text="NOMBRE:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:background="@null"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/tvPeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPeli"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/etPeli"
        android:text="Avengers: Endgame"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPeli"
        android:layout_marginTop="16dp"
        android:text="FECHA DE LANZAMIENTO:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:background="@null" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etFecha"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/etFecha"
        android:text="26 de abril de 2019"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etAutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFecha"
        android:layout_marginTop="16dp"
        android:text="AUTORES PRINCIPALES:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:background="@null" />

    <TextView
        android:id="@+id/tvAutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etAutores"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/etAutores"
        android:text="Anthony Russo, Joe Russo"
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAutores"
        android:layout_marginTop="16dp"
        android:text="DESCRIPCIÓN:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:background="@null"
        />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDescripcion"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@id/etDescripcion"
        android:text="Después de los eventos devastadores de Avengers: Infinity War, el universo está en ruinas,con la ayuda de los aliados restantes, los Vengadores se reúnen una vez más para deshacer las acciones de Thanos y restaurar el orden en el universo."
        android:textSize="16sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescripcion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="SITIO WEB "
        android:backgroundTint="@color/black"/>

</RelativeLayout>
